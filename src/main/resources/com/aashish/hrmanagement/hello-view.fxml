<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="340.0" prefWidth="416.0" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.aashish.hrmanagement.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label fx:id="welcomeText" text="Welcome to HR Management System" />
    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Username" />
    <TextField fx:id="usernameField" />
    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Password" />
    <TextField fx:id="passwordField" />
    <Button mnemonicParsing="false" text="Login" onAction="#onHelloButtonClick" />
    <Label fx:id="loginMessage" />
</VBox>
